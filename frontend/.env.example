# ============================================
# SolarArc Pro - 前端环境变量配置模板
# ============================================
# 使用方法：
# 1. 复制此文件为 .env.local
# 2. 填写实际的配置值
# 3. 不要将 .env.local 文件提交到Git
#
# 注意：
# - 所有环境变量必须以 VITE_ 开头
# - 构建时会将这些变量打包到代码中
# - 不要在环境变量中存储敏感信息

# ============================================
# API配置
# ============================================
# 后端API地址
VITE_API_BASE_URL=http://localhost:8000/api/v1

# API超时时间（毫秒）
VITE_API_TIMEOUT=30000

# API重试次数
VITE_API_RETRY_COUNT=3

# ============================================
# 地图配置
# ============================================
# 地图提供商 (amap, mapbox, maplibre)
VITE_MAP_PROVIDER=amap

# 高德地图API Key（必填）
# 申请地址：https://console.amap.com/dev/key/app
VITE_AMAP_KEY=your_amap_key_here

# Mapbox Token（如果使用Mapbox）
VITE_MAPBOX_TOKEN=

# 地图样式（如果使用Mapbox）
VITE_MAP_STYLE=amap://styles/normal

# 地图中心点（北京天安门）
VITE_MAP_CENTER_LNG=116.397428
VITE_MAP_CENTER_LAT=39.90923

# 默认缩放级别
VITE_MAP_DEFAULT_ZOOM=12

# 最小缩放级别
VITE_MAP_MIN_ZOOM=3

# 最大缩放级别
VITE_MAP_MAX_ZOOM=18

# ============================================
# 默认城市配置
# ============================================
# 默认城市名称
VITE_DEFAULT_CITY=北京

# 城市代码（GB/T 2260）
VITE_DEFAULT_CITY_CODE=110000

# ============================================
# 坐标系配置
# ============================================
# 默认坐标系 (WGS84, GCJ02, BD09)
VITE_DEFAULT_COORD_SYSTEM=GCJ02

# 是否显示坐标转换警告
VITE_SHOW_COORD_WARNING=true

# ============================================
# 功能开关
# ============================================
# 是否启用日照分析功能
VITE_ENABLE_ANALYSIS=true

# 是否启用阴影对比功能
VITE_ENABLE_SHADOW_COMPARE=true

# 是否启用数据导出功能
VITE_ENABLE_EXPORT=true

# 是否启用3D渲染
VITE_ENABLE_3D=true

# 是否启用时间轴动画
VITE_ENABLE_TIMELINE=true

# 是否启用开发模式调试
VITE_ENABLE_DEBUG=false

# ============================================
# 性能配置
# ============================================
# 建筑LOD（分级加载）阈值
VITE_LOD_HEIGHT_1=50
VITE_LOD_HEIGHT_2=20

# 最大加载建筑数量
VITE_MAX_BUILDINGS=2000

# 阴影更新延迟（毫秒）
VITE_SHADOW_UPDATE_DELAY=100

# 时间轴动画速度（秒/24小时）
VITE_TIMELINE_SPEED=10

# ============================================
# 缓存配置
# ============================================
# 是否启用前端缓存
VITE_ENABLE_CACHE=true

# 缓存过期时间（秒）
VITE_CACHE_TTL=300

# ============================================
# UI配置
# ============================================
# 应用名称
VITE_APP_NAME=SolarArc Pro

# 应用版本
VITE_APP_VERSION=1.0.0

# 应用主题（light, dark, auto）
VITE_APP_THEME=auto

# 主色调
VITE_PRIMARY_COLOR=#1890ff

# 语言（zh-CN, en-US）
VITE_LANGUAGE=zh-CN

# ============================================
# 3D渲染配置
# ============================================
# 建筑默认颜色（RGB）
VITE_BUILDING_COLOR=200,200,200

# 建筑选中颜色（RGB）
VITE_BUILDING_SELECTED_COLOR=24,144,255

# 阴影颜色（RGBA）
VITE_SHADOW_COLOR=0,0,0,100

# 是否显示建筑轮廓
VITE_SHOW_BUILDING_OUTLINE=true

# 轮廓颜色（RGB）
VITE_OUTLINE_COLOR=100,100,100

# ============================================
# 时间轴配置
# ============================================
# 默认时间（0-23）
VITE_DEFAULT_HOUR=12

# 时间轴步长（分钟）
VITE_TIMELINE_STEP=15

# 关键时间点标记（日出、正午、日落）
VITE_SHOW_KEY_TIME_POINTS=true

# ============================================
# 分析配置
# ============================================
# 日照时间分析开始时间
VITE_ANALYSIS_START_HOUR=6

# 日照时间分析结束时间
VITE_ANALYSIS_END_HOUR=18

# 分析精度（分钟）
VITE_ANALYSIS_PRECISION=15

# ============================================
# 导出配置
# ============================================
# 支持的导出格式（geojson,csv,excel,pdf）
VITE_EXPORT_FORMATS=geojson,csv,excel

# 最大导出数据量
VITE_MAX_EXPORT_ROWS=10000

# ============================================
# 帮助与支持
# ============================================
# 帮助文档URL
VITE_HELP_DOC_URL=https://docs.solararc.pro

# 问题反馈URL
VITE_FEEDBACK_URL=https://github.com/solararc-pro/solararc-pro/issues

# 联系邮箱
VITE_SUPPORT_EMAIL=support@solararc.pro

# ============================================
# 统计配置
# ============================================
# 是否启用匿名统计
VITE_ENABLE_ANALYTICS=false

# 统计代码ID（Google Analytics等）
VITE_ANALYTICS_ID=

# ============================================
# 开发模式配置
# ============================================
# 是否显示FPS
VITE_SHOW_FPS=false

# 是否显示组件边界
VITE_SHOW_BOUNDARIES=false

# 是否启用React DevTools
VITE_ENABLE_REACT_DEVTOOLS=true

# ============================================
# 第三方服务配置
# ============================================
# Sentry DSN（错误追踪）
VITE_SENTRY_DSN=

# 百度统计ID
VITE_BAIDU_ANALYTICS_ID=

# 客服系统URL
VITE_CUSTOMER_SERVICE_URL=
